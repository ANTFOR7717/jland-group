---
// AboutUs Component - Pixel-perfect implementation from Motiff design
import {
  Container,
  Section,
  SectionHeader,
  ContentBlock,
  Card,
  Layout,
  DecorativeLine,
  Statistics,
  NumberedSection,
} from "../ui/index.js";
import Heading from "../ui/display/Heading.astro";
import Text from "../ui/display/Text.astro";

export interface Props {
  heading?: string;
  history?: { title: string; description: string };
  mission?: { title: string; description: string };
  values?: { title: string; description: string };
  stats?: { value: string; label: string }[];
  commitment?: { title: string; text: string };
  videoSrc?: string;
}

const { heading, history, mission, values, stats, commitment, videoSrc } =
  Astro.props;
---

<Section background="light" padding="sm" class="py-8 sm:py-12">
  <Container
    size="full"
    class="overflow-hidden gap-1.5 flex flex-col items-stretch font-inter text-base font-normal px-4 md:px-8"
  >
    <!-- Main Title -->
    <SectionHeader
      title={heading}
      level={1}
      size="4xl"
      alignment="center"
      spacing="lg"
      decorativeImage="https://static.motiffcontent.com/private/resource/image/19847a91b1c45aa-f9b7ad44-c36a-47e5-a05e-5ab2e2f83806.svg"
    />

    <!-- Main Content Area -->
    <Layout
      variant="two-column"
      leftBackground="light"
      rightBackground="light"
      minHeight="600px"
      leftPadding="sm"
      rightPadding="sm"
      gap="md"
      class="mt-2 flex-col lg:flex-row"
    >
      <!-- Left Column -->
      <div slot="left" class="mt-[9.16px] gap-2 flex flex-col items-stretch">
        <!-- Section 01 -->
        <NumberedSection
          number="01"
          title={history.title}
          description={history.description}
        />

        <!-- Section 02 -->
        <NumberedSection
          number="02"
          title={mission.title}
          description={mission.description}
        />

        <!-- Section 03 -->
        <NumberedSection
          number="03"
          title={values.title}
          description={values.description}
        />

        <!-- Stats Section -->
        <Statistics stats={stats} />
      </div>

      <!-- Right Column - Image -->
      <div slot="right" class="flex items-center justify-center h-full">
        <Card class="w-full lg:w-[608px] p-0 overflow-hidden rounded-2xl">
          <div class="relative w-full aspect-video overflow-hidden rounded-2xl">
            <iframe
              src={videoSrc}
              allow="fullscreen"
              allowfullscreen
              class="absolute inset-0 w-full h-full border-0"></iframe>
          </div>
        </Card>
      </div>
    </Layout>

    <!-- Commitment Section -->
    <Container size="xl" class="mt-8 sm:mt-12 flex justify-center">
      <Card
        variant="default"
        class="gap-3 flex flex-col items-stretch p-4 md:p-8"
      >
        <Heading
          level={2}
          size="2xl"
          color="default"
          class="text-center mt-[33px] mx-auto"
        >
          {commitment.title}
        </Heading>
        <Text
          variant="body"
          color="secondary"
          class="text-center mx-auto max-w-prose min-h-[72px]"
        >
          {commitment.text}
        </Text>
        <DecorativeLine
          variant="accent"
          width="lg"
          alignment="center"
          class="mt-1 mb-[33px]"
        />
      </Card>
    </Container>
  </Container>
</Section>
