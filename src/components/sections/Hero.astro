---
import { Button, Badge } from '../ui/index.js';
import { Input, Form, Card } from '../ui/index.js';
import { ContentGrid, ContentBlock } from '../ui/index.js';
import { ButtonGroup } from '../ui/index.js';
import { HeroSection, TrustIndicator, TrustIndicatorGroup } from '../ui/index.js';
// Note: Heading and Text require direct imports due to TypeScript compatibility
import Heading from '../ui/display/Heading.astro';
import Text from '../ui/display/Text.astro';

export interface Props {
  videoSrc?: string;
}

const { videoSrc } = Astro.props;
---


<HeroSection videoSrc={videoSrc}>
  <!-- Main Content Area -->
  <ContentGrid columns={2} gap="xl" padding="lg" class="mt-5">
    <!-- Left Content -->
    <ContentBlock maxWidth="max-w-full md:max-w-[803px]">

      <!-- Main Heading -->
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight max-w-[623px]">
        Professional Roofing Services<br>
        <span class="text-accent-primary">You Can Trust</span>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl text-white mb-8 leading-relaxed max-w-[640px]">
        For over a decade, J Land Contracting has been protecting families across Maryland with expert roofing services. 
        We're not just roofersâ€”we're your neighbors, committed to excellence and integrity in every roof we install.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-start items-start mb-8">
        <Button href="/contact" variant="primary" size="lg">
          Get Your Free Roof Inspection
        </Button>
        <Button href="/projects" variant="primary" size="lg" class="bg-white text-brand-primary border-white hover:bg-gray-100">
          View Our Projects
        </Button>
      </div>
      
      <!-- Trust Indicators -->
      <div class="flex flex-wrap justify-start gap-6 text-sm text-white">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>Licensed & Insured</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>Lifetime Warranty</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>Emergency Services</span>
        </div>
      </div>
    </ContentBlock>
    
    <!-- Quote Form -->
    <Card variant="quote" quoteWidth="md" class="mt-8 md:mt-0">
      <Form variant="quote">
        <Input 
          type="text" 
          placeholder="Full Name" 
          name="fullName"
          required
          class="min-h-[48px]"
        />
        <Input 
          type="tel" 
          placeholder="Phone Number" 
          name="phone"
          required
          class="min-h-[48px]"
        />
        <Input 
          type="email" 
          placeholder="Email Address" 
          name="email"
          required
          class="min-h-[48px]"
        />
        <Input 
          type="text" 
          value="roof-inspection" 
          name="service"
          class="min-h-[48px]"
        />
        <Button 
          type="submit" 
          variant="primary"
          class="mt-2 w-full sm:w-auto min-h-[48px]"
        >
          GET QUOTE NOW
        </Button>
      </Form>
    </Card>
  </ContentGrid>
</HeroSection>
