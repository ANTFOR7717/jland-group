---
// Hero component matching the Motiff design
// Updated to use abstracted UI components
import { Button, Badge } from '../ui/index.js';
import { Input, Form, Card } from '../ui/index.js';
import { ContentGrid, ContentBlock } from '../ui/index.js';
import { ButtonGroup } from '../ui/index.js';
import { HeroSection, TrustIndicator, TrustIndicatorGroup } from '../ui/index.js';
// Note: Heading and Text require direct imports due to TypeScript compatibility
import Heading from '../ui/display/Heading.astro';
import Text from '../ui/display/Text.astro';
---

<HeroSection backgroundImage="https://static.motiffcontent.com/private/resource/image/198450a83464522-96fe5512-672e-4c61-a5cf-8bb3295a188c.svg">
  <!-- Main Content Area -->
  <ContentGrid columns={2} gap="xl" padding="lg" class="mt-3 sm:mt-4 md:mt-5 !flex-col lg:!flex-row lg:!justify-between lg:!items-start">
    <!-- Left Content -->
    <ContentBlock maxWidth="max-w-full md:max-w-[803px]" class="w-full lg:w-auto px-2 sm:px-4 md:px-6 lg:px-0">
      <!-- Main Heading -->
      <div class="flex flex-col gap-3 sm:gap-4 md:gap-5">
        <Heading level={1} color="white" class="max-w-[623px] text-2xl sm:text-3xl md:text-4xl lg:text-5xl leading-tight sm:leading-8 md:leading-9 lg:leading-10">
          Frederick's Most Experienced Roofing Experts
        </Heading>
        <Text variant="lead" color="white" class="max-w-[640px] text-lg sm:text-xl md:text-2xl lg:text-xl">
          Quality Commercial & Residential Roofing Solutions Since 2005
        </Text>
        <Text variant="body" color="muted" class="max-w-[543px] text-base sm:text-lg md:text-xl lg:text-lg leading-6 sm:leading-7 md:leading-8 lg:leading-7">
          Serving Frederick, MD and surrounding areas with premium roofing services
        </Text>
      </div>
      
      <!-- CTA Buttons -->
      <ButtonGroup gap="md" class="mt-6 sm:mt-7 md:mt-8 flex-col sm:flex-row">
        <Button variant="primary" size="lg" class="w-full sm:w-auto min-h-[48px] sm:min-h-[52px] text-base sm:text-lg">
          FREE ROOF INSPECTION
        </Button>
        <Button variant="secondary" size="lg" class="w-full sm:w-auto min-h-[48px] sm:min-h-[52px] text-base sm:text-lg">
          VIEW OUR PROJECTS
        </Button>
      </ButtonGroup>
      
      <!-- Trust Indicators -->
      <TrustIndicatorGroup variant="hero" class="mt-6 sm:mt-7 md:mt-8 flex-col sm:flex-row">
        <TrustIndicator rating={5} text="5-Star Rating" variant="hero" />
        <TrustIndicator icon="shield" text="Licensed & Insured" variant="hero" />
        <TrustIndicator icon="clock" text="24-Hour Emergency Service" variant="hero" />
      </TrustIndicatorGroup>
      
      <!-- Badges -->
      <ContentGrid variant="badges" gap="lg" padding="none" class="mt-6 sm:mt-8 md:mt-12 !flex !flex-wrap !justify-center sm:!justify-start">
        <Badge variant="trust" size="lg" class="min-w-[150px] sm:max-w-[180px] mb-2 sm:mb-0 px-3 py-2">
    
           <img src="https://certainteed.widen.net/content/75111894-35f3-4266-bf3c-6f7e428a7d1a/web/Contractor%20Badges_RGB_Select%20ShingleMaster%20Roofing%20Contractor.png" alt="Google Guaranteed Service Provider" class="w-auto object-contain" />
   
        </Badge>
        <Badge variant="trust" size="lg" class="min-w-[40px] sm:max-w-[100px] mb-2 sm:mb-0">
          <img src="https://cdn.brandfetch.io/idgWX7bilS/theme/dark/logo.svg?c=1bxid64Mup7aczewSAYMX&t=1667845642131" alt="BBB Accredited Business" class="w-auto object-contain" />
        </Badge>
        <Badge variant="trust" size="lg" class="min-w-[100px] sm:max-w-[120px] mb-2 sm:mb-0 px-3 py-2">
    
           <img src="https://drillest.com/hubfs/google-guaranteed-service-provider.png" alt="Google Guaranteed Service Provider" class="w-auto object-contain" />
   
        </Badge>
      </ContentGrid>
    </ContentBlock>
    
    <!-- Quote Form -->
    <Card variant="quote" quoteWidth="md" class="w-full lg:w-auto mt-8 sm:mt-10 lg:mt-0 mx-2 sm:mx-4 md:mx-6 lg:mx-0">
      <Form variant="quote">
        <Input 
          type="text" 
          placeholder="Full Name" 
          name="fullName"
          required
          class="min-h-[48px] sm:min-h-[52px] text-base sm:text-lg"
        />
        <Input 
          type="tel" 
          placeholder="Phone Number" 
          name="phone"
          required
          class="min-h-[48px] sm:min-h-[52px] text-base sm:text-lg"
        />
        <Input 
          type="email" 
          placeholder="Email Address" 
          name="email"
          required
          class="min-h-[48px] sm:min-h-[52px] text-base sm:text-lg"
        />
        <Input 
          type="text" 
          value="roof-inspection" 
          name="service"
          class="min-h-[48px] sm:min-h-[52px] text-base sm:text-lg"
        />
        <Button 
          type="submit" 
          variant="primary"
          class="mt-3 w-full sm:w-auto min-h-[48px] sm:min-h-[52px] text-base sm:text-lg"
        >
          GET QUOTE NOW
        </Button>
      </Form>
    </Card>
  </ContentGrid>
</HeroSection>