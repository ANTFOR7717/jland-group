---
// ContentGrid component for flexible content layouts
// Enhanced for optimal responsiveness and space utilization
export interface Props {
  columns?: 1 | 2 | 3;
  gap?: 'sm' | 'md' | 'lg' | 'xl';
  alignment?: 'start' | 'center' | 'end' | 'between';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  variant?: 'default' | 'badges';
  class?: string;
}

const { 
  columns = 2,
  gap = 'xl',
  alignment = 'between',
  padding = 'lg',
  variant = 'default',
  class: className = '' 
} = Astro.props;

// Enhanced responsive column classes for better viewport utilization
const columnClasses = {
  1: 'flex flex-col',
  2: 'flex flex-col lg:flex-row lg:justify-between lg:items-start',
  3: 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3'
};

// Responsive gap classes for optimal spacing across viewports
const gapClasses = {
  sm: 'gap-3 sm:gap-4',
  md: 'gap-4 sm:gap-6 lg:gap-8',
  lg: 'gap-6 sm:gap-8 lg:gap-12',
  xl: 'gap-8 sm:gap-12 lg:gap-16 xl:gap-24 2xl:gap-32'
};

const alignmentClasses = {
  start: 'items-start',
  center: 'items-center',
  end: 'items-end',
  between: 'justify-between'
};

// Enhanced responsive padding for better space utilization
const paddingClasses = {
  none: '',
  sm: 'px-4 sm:px-6',
  md: 'px-4 sm:px-8 lg:px-12',
  lg: 'px-4 sm:px-8 lg:px-16 xl:px-20 2xl:px-24'
};

// Variant-specific classes with responsive enhancements
const variantClasses = {
  default: '',
  badges: 'flex flex-wrap items-center justify-center sm:justify-start'
};

const gridClass = variant === 'badges' 
  ? `${variantClasses[variant]} ${gapClasses[gap]} ${paddingClasses[padding]} ${className}`
  : `${columnClasses[columns]} ${gapClasses[gap]} ${paddingClasses[padding]} ${className}`;
---

<div class={gridClass}>
  <slot />
</div>