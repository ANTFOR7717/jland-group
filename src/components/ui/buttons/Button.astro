---
// Button Component - Reusable button with multiple variants
// Adheres to Tailwind CSS only styling as required

export interface Props {
  variant?: 'primary' | 'secondary' | 'subscribe' | 'link' | 'hamburger';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
  id?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  class: className = '',
  id,
  ...rest
} = Astro.props;

// Base classes for all buttons
const baseClasses = 'font-bold rounded transition-opacity hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2';

// Variant-specific classes with proper contrast
const variantClasses = {
  primary: 'bg-accent-primary text-brand-primary',
  secondary: 'border-2 bg-transparent border-brand-border text-brand-secondary',
  subscribe: 'bg-accent-primary text-brand-primary w-full',
  link: 'text-accent-primary underline',
  hamburger: 'text-white focus:outline-none'
};

// Size-specific classes
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-12 py-4',
  lg: 'px-14 py-5 text-lg',
  hamburger: 'p-1'
};

// Handle hamburger variant sizing
const actualSize = variant === 'hamburger' ? 'hamburger' : size;
const buttonClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[actualSize]} ${className}`;

const commonProps = {
  class: buttonClasses,
  disabled,
  id,
  ...rest
};
---

{href ? (
  <a href={href} {...commonProps}>
    <slot />
  </a>
) : (
  <button type={type} {...commonProps}>
    {variant === 'hamburger' ? (
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    ) : (
      <slot />
    )}
  </button>
)}