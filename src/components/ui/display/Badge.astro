---
// Badge Component - Redesigned for responsive trust badges and image content
// Adheres to Tailwind CSS only styling as required

export interface Props {
  variant?: 'default' | 'success' | 'warning' | 'info' | 'bbb' | 'service' | 'google' | 'trust' | 'image';
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | 'auto';
  class?: string;
}

const {
  variant = 'default',
  size = 'auto',
  class: className = '',
  ...rest
} = Astro.props;

// Base classes for all badges - minimal container approach
const baseClasses = 'inline-flex items-center justify-center';

// Variant-specific classes and styles - focused on trust badges and images
const variantClasses = {
  default: 'bg-gray-100 text-gray-800 rounded-md px-2 py-1',
  success: 'bg-green-100 text-green-800 rounded-md px-2 py-1',
  warning: 'bg-yellow-100 text-yellow-800 rounded-md px-2 py-1',
  info: 'bg-blue-100 text-blue-800 rounded-md px-2 py-1',
  bbb: 'text-white rounded-md px-2 py-1',
  service: 'text-brand-primary rounded-md px-2 py-1',
  google: 'bg-white text-black rounded-md px-2 py-1',
  trust: 'bg-transparent', // For trust badges with logos
  image: 'bg-transparent'  // For pure image badges
};

const variantStyles = {
  default: '',
  success: '',
  warning: '',
  info: '',
  bbb: 'background-color: #262327;',
  service: 'background: rgba(38, 35, 39, 0.10);',
  google: '',
  trust: '',
  image: ''
};

// Responsive size classes - designed for trust badge images
const sizeClasses = {
  xs: 'h-4 w-auto max-h-4',
  sm: 'h-6 w-auto max-h-6',
  md: 'h-8 w-auto max-h-8',
  lg: 'h-10 w-auto max-h-10 sm:h-12 sm:max-h-12',
  xl: 'h-12 w-auto max-h-12 sm:h-16 sm:max-h-16',
  auto: 'h-auto w-auto max-w-full' // Completely flexible
};

const badgeClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
const badgeStyle = variantStyles[variant];
---

<div class={badgeClasses} style={badgeStyle} {...rest}>
  <slot />
</div>