---
// Badge Component - Trust indicators and labels
// Adheres to Tailwind CSS only styling as required

export interface Props {
  variant?: 'default' | 'success' | 'warning' | 'info' | 'bbb' | 'service' | 'google';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  variant = 'default',
  size = 'md',
  class: className = '',
  ...rest
} = Astro.props;

// Base classes for all badges
const baseClasses = 'inline-flex items-center rounded';

// Variant-specific classes and styles
const variantClasses = {
  default: 'bg-gray-100 text-gray-800',
  success: 'bg-green-100 text-green-800',
  warning: 'bg-yellow-100 text-yellow-800',
  info: 'bg-blue-100 text-blue-800',
  bbb: 'text-white',
  service: 'text-brand-primary',
  google: 'bg-white text-black'
};

const variantStyles = {
  default: '',
  success: '',
  warning: '',
  info: '',
  bbb: 'background-color: #262327;',
  service: 'background: rgba(38, 35, 39, 0.10);',
  google: ''
};

// Size-specific classes
const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1 text-sm',
  lg: 'px-4 py-2 text-base'
};

const badgeClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
const badgeStyle = variantStyles[variant];
---

<div class={badgeClasses} style={badgeStyle} {...rest}>
  <slot />
</div>