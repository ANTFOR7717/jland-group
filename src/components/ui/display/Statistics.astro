---
// Statistics component for displaying key metrics with decorative elements
export interface Props {
  stats: Array<{
    value: string;
    label: string;
  }>;
  class?: string;
}

const { 
  stats,
  class: className = '' 
} = Astro.props;

import DecorativeLine from './DecorativeLine.astro';
---

<div class={`border-t border-[#C1B9BC] mt-10 mr-0.5 gap-1 flex flex-col items-stretch pt-8 ${className}`}>
  
  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-y-4 text-center md:grid-cols-3 md:gap-x-8">
    {stats.map((stat) => (
      <div class="flex flex-col items-center gap-2">
        <div class="text-[#262327] text-3xl md:text-4xl font-bold leading-9 text-center justify-center items-center flex text-ellipsis min-h-9">
          {stat.value}
        </div>
        <div class="text-[#7D7877] text-sm md:text-base leading-5 text-center justify-center items-center flex text-ellipsis min-h-5">
          {stat.label}
        </div>
        <DecorativeLine variant="secondary" width="sm" class="" />
      </div>
    ))}
  </div>
</div>