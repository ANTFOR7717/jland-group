---
export interface Props {
  project: {
    title: string;
    location: string;
    description: string;
    materials?: string;
    image: string;
    testimonial?: {
      quote: string;
      author: string;
      role?: string;
    };
    details?: {
      duration?: string;
      size?: string;
      challenge?: string;
    };
    cta?: {
      text: string;
      href: string;
    };
  };
  variant?: 'default' | 'featured';
  imagePosition?: 'left' | 'right';
}

const { project, variant = 'default', imagePosition = 'left' } = Astro.props;
const isImageLeft = imagePosition === 'left';
const isFeatured = variant === 'featured';
---

<article class={`
  w-full bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl
  ${isFeatured ? 'border-2 border-brand-primary' : 'border border-gray-200'}
`}>
  <div class={`
    grid grid-cols-1 lg:grid-cols-2 gap-0 min-h-[400px]
    ${isImageLeft ? '' : 'lg:grid-flow-col-dense'}
  `}>
    <!-- Image Section -->
    <div class={`
      relative overflow-hidden bg-gray-100
      ${isImageLeft ? 'lg:order-1' : 'lg:order-2'}
    `}>
      <img 
        src={project.image} 
        alt={`${project.title} - ${project.location}`}
        class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
        loading="lazy"
      />
      
      <!-- Project Type Badge -->
      {isFeatured && (
        <div class="absolute top-4 left-4 bg-brand-primary text-white px-3 py-1 rounded-full text-sm font-semibold">
          Featured Project
        </div>
      )}
      
      <!-- Image Overlay for Mobile -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent lg:hidden"></div>
    </div>

    <!-- Content Section -->
    <div class={`
      flex flex-col justify-between p-6 lg:p-8
      ${isImageLeft ? 'lg:order-2' : 'lg:order-1'}
    `}>
      <!-- Header -->
      <div class="space-y-4">
        <!-- Location & Title -->
        <div class="space-y-2">
          <p class="text-brand-secondary font-medium text-sm uppercase tracking-wide">
            {project.location}
          </p>
          <h3 class={`
            font-bold text-gray-900 leading-tight
            ${isFeatured ? 'text-2xl lg:text-3xl' : 'text-xl lg:text-2xl'}
          `}>
            {project.title}
          </h3>
        </div>

        <!-- Description -->
        <p class="text-gray-600 leading-relaxed text-base lg:text-lg mb-2">
          {project.description}
        </p>

        <!-- Project Details -->
        {project.details && (
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-2">
            {project.details.duration && (
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-brand-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm text-gray-600">{project.details.duration}</span>
              </div>
            )}
            {project.details.size && (
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-brand-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
                </svg>
                <span class="text-sm text-gray-600">{project.details.size}</span>
              </div>
            )}
          </div>
        )}

        <!-- Materials -->
        {project.materials && (
          <div class="flex flex-wrap gap-2 pt-4">
            <span class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-1 w-full">
              Materials Used:
            </span>
            {project.materials.split(',').map(material => (
              <span class="bg-brand-primary/10 text-brand-primary px-3 py-1 rounded-full text-sm font-medium border border-brand-primary/20 hover:bg-brand-primary/20 transition-colors">
                {material.trim()}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Testimonial Section -->
      {project.testimonial && (
        <div class="mt-8 p-6 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl border border-gray-200 shadow-sm">
          <div class="flex items-start space-x-1 mb-3">
            <svg class="w-5 h-5 text-brand-primary mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <blockquote class="text-gray-700 italic leading-relaxed font-medium">
              "{project.testimonial.quote}"
            </blockquote>
          </div>
          <div class="flex items-center space-x-3 pl-6">
            <div class="w-12 h-12 bg-brand-primary rounded-full flex items-center justify-center shadow-md">
              <span class="text-white font-bold text-lg">
                {project.testimonial.author.charAt(0)}
              </span>
            </div>
            <div>
              <p class="font-semibold text-gray-900">
                {project.testimonial.author}
              </p>
              {project.testimonial.role && (
                <p class="text-gray-600 text-sm">
                  {project.testimonial.role}
                </p>
              )}
            </div>
          </div>
        </div>
      )}

      <!-- Call to Action -->
      <div class="mt-6 pt-4 border-t border-gray-100">
        {project.cta ? (
          <a 
            href={project.cta.href}
            class={`
              inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold transition-all duration-200
              ${isFeatured 
                ? 'bg-brand-primary text-white hover:bg-brand-primary/90 shadow-md hover:shadow-lg' 
                : 'bg-gray-900 text-white hover:bg-gray-800'
              }
            `}
          >
            {project.cta.text}
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        ) : (
          <button 
            class={`
              inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold transition-all duration-200
              ${isFeatured 
                ? 'bg-brand-primary text-white hover:bg-brand-primary/90 shadow-md hover:shadow-lg' 
                : 'bg-gray-900 text-white hover:bg-gray-800'
              }
            `}
          >
            View Project Details
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        )}
      </div>
    </div>
  </div>
</article>