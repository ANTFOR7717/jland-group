---
// Input Component - Reusable input field with consistent styling
// Enhanced for optimal responsiveness and mobile user experience
// Adheres to Tailwind CSS only styling as required

export interface Props {
  type?: 'text' | 'email' | 'tel' | 'textarea';
  placeholder?: string;
  name: string;
  required?: boolean;
  class?: string;
  rows?: number; // for textarea
  value?: string;
}

const {
  type = 'text',
  placeholder,
  name,
  required = false,
  class: className = '',
  rows = 4,
  value,
  ...rest
} = Astro.props;

// Enhanced responsive base classes for optimal mobile experience
const baseClasses = 'bg-white rounded-lg border border-gray-300 px-3 py-3 sm:px-4 sm:py-3 md:px-4 md:py-4 w-full text-base sm:text-lg focus:outline-none focus:ring-2 focus:border-transparent transition-all duration-200';

// Enhanced focus and interaction states
const focusStyle = 'focus:ring-yellow-400 focus:ring-opacity-50 hover:border-gray-400';

const inputClasses = `${baseClasses} ${focusStyle} ${className}`;

const commonProps = {
  class: inputClasses,
  name,
  placeholder,
  required,
  value,
  ...rest
};
---

{type === 'textarea' ? (
  <textarea rows={rows} {...commonProps}>
  </textarea>
) : (
  <input type={type} {...commonProps} />
)}