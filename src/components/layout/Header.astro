---
// Header component with transparent background
import HamburgerMenu from '../ui/navigation/HamburgerMenu.astro';
---

<header class="absolute top-0 left-0 right-0 z-50 bg-transparent">
  <div class="flex justify-between items-center px-4 sm:px-6 md:px-8 lg:px-16 py-4 sm:py-5">
    <!-- Logo -->
    <div class="text-white text-xl sm:text-2xl font-bold leading-7 sm:leading-8 w-48 sm:w-64 md:w-71">
      <a href="/">
      J LAND CONTRACTING
      </a>
    </div>
    
    <!-- Hamburger Menu (Visible on Mobile Only) -->
    <HamburgerMenu />

    <!-- Navigation (Hidden on Mobile) -->
    <nav id="mobile-nav" class="hidden md:flex items-center gap-4 lg:gap-6 xl:gap-8 text-white font-semibold">
      <a href="/services" class="hover:text-accent-primary transition-colors">Services</a>
      <a href="/about" class="hover:text-accent-primary transition-colors">About</a>
      <a href="/projects" class="hover:text-accent-primary transition-colors">Projects</a>
      <a href="/resources" class="hover:text-accent-primary transition-colors">Resources</a>
      <a href="/contact" class="hover:text-accent-primary transition-colors">Contact</a>
    </nav>
  </div>
  
  <!-- Mobile Navigation Menu (Initially Hidden) -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 right-0 bg-background-dark backdrop-blur-sm shadow-lg">
    <nav class="flex flex-col items-center py-6 gap-6 text-white font-semibold">
      <a href="/services" class="hover:text-accent-primary transition-colors py-2">Services</a>
      <a href="/about" class="hover:text-accent-primary transition-colors py-2">About</a>
      <a href="/projects" class="hover:text-accent-primary transition-colors py-2">Projects</a>
      <a href="/resources" class="hover:text-accent-primary transition-colors py-2">Resources</a>
      <a href="/contact" class="hover:text-accent-primary transition-colors py-2">Contact</a>
    </nav>
  </div>
</header>