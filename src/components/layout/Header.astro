---
// Header component with transparent background
import HamburgerMenu from "../ui/navigation/HamburgerMenu.astro";

export interface Props {
  logo_text?: string;
  nav_items?: { label: string; href: string }[];
}

const { logo_text = "", nav_items = [] } = Astro.props;

const fp = "@data[site]";
---

<header class="absolute top-0 left-0 right-0 z-50 bg-transparent">
  <div
    class="flex justify-between items-center px-4 sm:px-6 md:px-8 lg:px-16 py-4 sm:py-5"
  >
    <!-- Logo -->
    <div
      class="flex items-center text-white text-xl sm:text-2xl font-bold leading-7 sm:leading-8 w-48 sm:w-64 md:w-71 whitespace-nowrap"
    >
      <a href="/" class="flex items-center gap-2 sm:gap-3">
        <img
          src="/favicon.svg"
          alt="J Land Contracting Logo"
          class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10 flex-shrink-0"
        />
        <span
          data-editable="text"
          data-prop={`${fp}.header_logo_text`}
          class="text-white">{logo_text}</span
        >
      </a>
    </div>

    <!-- Hamburger Menu (Visible on Mobile Only) -->
    <HamburgerMenu />

    <!-- Navigation (Hidden on Mobile) -->
    <nav
      id="mobile-nav"
      class="hidden md:flex items-center gap-4 lg:gap-6 xl:gap-8 text-white font-semibold"
    >
      {
        nav_items.map((item, index) => (
          <a
            href={item.href}
            class="hover:text-accent-primary transition-colors"
          >
            <span
              data-editable="text"
              data-prop={`${fp}.header_nav[${index}].label`}
            >
              {item.label}
            </span>
          </a>
        ))
      }
    </nav>
  </div>

  <!-- Mobile Navigation Menu (Initially Hidden) -->
  <div
    id="mobile-menu"
    class="hidden md:hidden absolute top-full left-0 right-0 bg-background-dark backdrop-blur-sm shadow-lg"
  >
    <nav class="flex flex-col items-center py-6 gap-6 text-white font-semibold">
      {
        nav_items.map((item) => (
          <a
            href={item.href}
            class="hover:text-accent-primary transition-colors py-2"
          >
            {item.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
