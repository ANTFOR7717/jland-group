---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/buttons/Button.astro';
import Container from '../components/ui/layout/Container.astro';
import Section from '../components/ui/layout/Section.astro';
import SectionHeader from '../components/ui/display/SectionHeader.astro';
import Card from '../components/ui/display/Card.astro';
import CardGrid from '../components/ui/display/CardGrid.astro';
import Text from '../components/ui/display/Text.astro';

const pageTitle = "Resources - J Land Contracting | Roofing Science & Expert Tools";
const pageDescription = "Explore roofing science education, professional tools, and expert insights from GAF Master Elite certified contractors. Learn about ventilation systems, water shedding physics, and system integrity.";
---

<Layout title={pageTitle} description={pageDescription}>
		<!-- Hero Section - Exact pattern from about.astro -->
		<Section background="dark">
			<Container>
				<div class="text-center max-w-4xl mx-auto">
					<div class="mb-6">
						<div class="inline-flex items-center justify-center mb-4 text-white bg-brand-primary px-4 py-2 rounded-full font-semibold">Expert Resources Hub</div>
					</div>
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight">
						Roofing Resources &<br>
						<span class="text-accent-primary">Expert Insights</span>
					</h1>
					<p class="text-xl text-white mb-8 leading-relaxed">
						Access our comprehensive collection of roofing insights, professional tools, and expert guidance to make informed decisions about your roofing project in Frederick, MD.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
						<Button href="/contact" variant="primary" size="lg">
							Get Expert Consultation
						</Button>
						<Button href="#tools" variant="primary" size="lg" class="bg-white text-brand-primary border-white hover:bg-gray-100">
							Explore Tools
						</Button>
					</div>
					<div class="flex flex-wrap justify-center gap-6 text-sm text-white">
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
							</svg>
							<span>Expert-Curated Content</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
							</svg>
							<span>Industry-Leading Tools</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
							</svg>
							<span>Updated Weekly</span>
						</div>
					</div>
				</div>
			</Container>
		</Section>

  <!-- Blog Section -->
  <Section class="py-16 lg:py-24 bg-background-light">
    <Container>
      <SectionHeader 
        title="Roofing Insights Blog"
        alignment="center"
      />
      <Text variant="lead" color="muted" class="text-center max-w-2xl mx-auto mb-8">
        Stay informed with the latest roofing trends, maintenance tips, and industry insights from our experts.
      </Text>
      
      <CardGrid class="mt-12">
        <Card class="group hover:shadow-lg transition-shadow duration-300">
          <div class="p-8">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Latest Articles
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed">
              Discover expert insights on roofing materials, seasonal maintenance, and cost-saving tips from Frederick's most trusted roofing professionals.
            </p>
            <Button variant="primary" href="/blog" class="w-full">
              Visit Our Blog
            </Button>
          </div>
        </Card>
        
        <Card 
          variant="default" 
          title="Maintenance Guides"
          description="Step-by-step guides to help you maintain your roof's integrity and extend its lifespan with proper care and attention."
          buttonText="Read Guides"
          buttonHref="/blog/maintenance"
          class="group hover:shadow-lg transition-shadow duration-300 h-full"
        >
          <div class="p-8 h-full flex flex-col">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Maintenance Guides
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed flex-grow">
              Step-by-step guides to help you maintain your roof's integrity and extend its lifespan with proper care and attention.
            </p>
            <Button variant="secondary" href="/blog/maintenance" class="w-full mt-auto text-center text-sm sm:text-base">
              Read Guides
            </Button>
          </div>
        </Card>
        
        <Card class="group hover:shadow-lg transition-shadow duration-300 h-full">
          <div class="p-8 h-full flex flex-col">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Weather Protection
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed flex-grow">
              Learn how to protect your roof from Maryland's changing weather patterns and seasonal challenges.
            </p>
            <Button variant="secondary" href="/blog/weather" class="w-full mt-auto text-center text-sm sm:text-base">
              Learn More
            </Button>
          </div>
        </Card>
      </CardGrid>
    </Container>
  </Section>

  <!-- Roofing Science Education Section -->
  <Section class="py-16 lg:py-24">
    <Container>
      <SectionHeader
        title="The Science of a Complete Roofing System"
        alignment="center"
      />
      <Text variant="lead" color="muted" class="text-center max-w-3xl mx-auto mb-12">
        Understanding the technical principles behind roofing systems helps ensure long-term performance and protection for your home.
      </Text>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Ventilation Systems -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <div class="mb-6">
            <svg class="w-12 h-12 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-primary mb-4">Ventilation Systems</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            Proper attic ventilation is crucial for maintaining optimal roof performance. Without adequate airflow, heat and moisture can build up, leading to premature shingle deterioration and ice dam formation.
          </p>
          <p class="text-gray-600 leading-relaxed">
            Our GAF Master Elite certified installations include strategic soffit vents, ridge vents, and gable vents to ensure balanced air circulation, preventing condensation and extending your roof's lifespan by up to 30+ years.
          </p>
        </div>

        <!-- Water Shedding Physics -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <div class="mb-6">
            <svg class="w-12 h-12 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm9 0a1 1 0 011 1v1h1a1 1 0 110 2h-1v1a1 1 0 11-2 0V6h-1a1 1 0 110-2h1V3a1 1 0 011-1zM3 10a1 1 0 011 1v1h1a1 1 0 110 2H4v1a1 1 0 11-2 0v-1H1a1 1 0 110-2h1v-1a1 1 0 011-1zm13 0a1 1 0 011 1v1h1a1 1 0 110 2h-1v1a1 1 0 11-2 0v-1h-1a1 1 0 110-2h1v-1a1 1 0 011-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-primary mb-4">Water Shedding Physics</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            The physics of water flow across roofing surfaces is fundamental to system integrity. Water must be directed away from vulnerable areas through proper slope, flashing, and drainage systems.
          </p>
          <p class="text-gray-600 leading-relaxed">
            Our installations incorporate engineered water shedding with proper pitch calculations and seamless valley flashing to prevent water intrusion, backed by our comprehensive system warranty.
          </p>
        </div>

        <!-- Ice/Water Shield Importance -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <div class="mb-6">
            <svg class="w-12 h-12 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-primary mb-4">Ice & Water Shield Protection</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            Ice and water shields are critical barriers against moisture infiltration, especially in Maryland's freeze-thaw cycles. These self-adhering membranes prevent water backup during winter conditions.
          </p>
          <p class="text-gray-600 leading-relaxed">
            We install GAF's premium ice and water shields in all critical areas, including eaves, valleys, and penetrations, ensuring complete protection against water damage and maintaining your home's structural integrity.
          </p>
        </div>

        <!-- Ridge Cap Functions -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <div class="mb-6">
            <svg class="w-12 h-12 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l2-2z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-primary mb-4">Ridge Cap Engineering</h3>
          <p class="text-gray-600 mb-4 leading-relaxed">
            The ridge cap serves as the roof's final line of defense against wind-driven rain and provides essential ventilation. Properly installed ridge caps prevent water infiltration at the roof's peak.
          </p>
          <p class="text-gray-600 leading-relaxed">
            Our ridge cap installations use continuous cement and high-quality ridge shingles, ensuring weather-tight seals and optimal attic ventilation for maximum system performance and longevity.
          </p>
        </div>
      </div>

      <div class="text-center mt-12">
        <Button href="/contact" variant="primary" size="lg">
          Discuss Your System Needs
        </Button>
      </div>
    </Container>
  </Section>

  <!-- Tools Section -->
  <Section class="py-16 lg:py-24">
    <Container>
      <SectionHeader 
        title="Professional Roofing Tools"
        alignment="center"
      />
      <Text variant="lead" color="muted" class="text-center max-w-2xl mx-auto mb-8">
        Access our curated collection of professional-grade tools and calculators to help you plan and execute your roofing project.
      </Text>
      
      <CardGrid class="mt-12">
        <Card class="group hover:shadow-lg transition-shadow duration-300 h-full">
          <div class="p-8 h-full flex flex-col">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V4a2 2 0 00-2-2H6zm1 2a1 1 0 000 2h6a1 1 0 100-2H7zm6 7a1 1 0 011 1v3a1 1 0 11-2 0v-3a1 1 0 011-1zm-3 3a1 1 0 100 2h.01a1 1 0 100-2H10zm-4 1a1 1 0 011-1h.01a1 1 0 110 2H7a1 1 0 01-1-1zm1-4a1 1 0 100 2h.01a1 1 0 100-2H7zm2 0a1 1 0 100 2h.01a1 1 0 100-2H9zm2 0a1 1 0 100 2h.01a1 1 0 100-2H11zm0-2a1 1 0 100 2h.01a1 1 0 100-2H11zm-2 0a1 1 0 100 2h.01a1 1 0 100-2H9zm-2 0a1 1 0 100 2h.01a1 1 0 100-2H7zm2-2a1 1 0 100 2h.01a1 1 0 100-2H9zm2 0a1 1 0 100 2h.01a1 1 0 100-2H11z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Cost Calculator
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed flex-grow">
              Get accurate estimates for your roofing project with our advanced calculator that factors in materials, labor, and local pricing.
            </p>
            <Button variant="primary" href="/tools/calculator" class="w-full mt-auto text-center text-sm sm:text-base">
              Calculate Costs
            </Button>
          </div>
        </Card>
        
        <Card class="group hover:shadow-lg transition-shadow duration-300 h-full">
          <div class="p-8 h-full flex flex-col">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Material Guide
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed flex-grow">
              Compare roofing materials, understand their benefits, and make informed decisions with our comprehensive material comparison tool.
            </p>
            <Button variant="secondary" href="/tools/materials" class="w-full mt-auto text-center text-sm sm:text-base">
              Compare Materials
            </Button>
          </div>
        </Card>
        
        <Card class="group hover:shadow-lg transition-shadow duration-300 h-full">
          <div class="p-8 h-full flex flex-col">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Inspection Checklist
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed flex-grow">
              Use our professional inspection checklist to identify potential issues and maintain your roof's condition year-round.
            </p>
            <Button variant="secondary" href="/tools/inspection" class="w-full mt-auto text-center text-sm sm:text-base">
              Download Checklist
            </Button>
          </div>
        </Card>
        
        <Card class="group hover:shadow-lg transition-shadow duration-300 h-full">
          <div class="p-8 h-full flex flex-col">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-brand-primary mb-4">
              Emergency Guide
            </h3>
            <p class="text-brand-secondary mb-6 leading-relaxed flex-grow">
              Quick reference guide for roofing emergencies, including temporary fixes and when to call professionals immediately.
            </p>
            <Button variant="secondary" href="/tools/emergency" class="w-full mt-auto text-center text-sm sm:text-base">
              View Guide
            </Button>
          </div>
        </Card>
      </CardGrid>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section background="dark">
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 text-white">
          Ready to Start Your <span class="text-accent-primary">Roofing Project?</span>
        </h2>
        <p class="text-xl mb-8 text-white leading-relaxed">
          Let our expert team guide you through every step of your roofing journey. From initial consultation to project completion, we're here to help.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary" size="lg">
            Request an Estimate
          </Button>
          <Button href="/services" variant="primary" size="lg" class="bg-white text-brand-primary border-white hover:bg-gray-100">
            Learn More
          </Button>
        </div>
      </div>
    </Container>
    </Section>
</Layout>