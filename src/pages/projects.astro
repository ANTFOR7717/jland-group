---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';

import SectionHeader from '../components/ui/display/SectionHeader.astro';
import Card from '../components/ui/display/Card.astro';
import CardGrid from '../components/ui/display/CardGrid.astro';
import ProjectShowcaseCard from '../components/ui/display/ProjectShowcaseCard.astro';
import Button from '../components/ui/buttons/Button.astro';
import Container from '../components/ui/layout/Container.astro';
import Section from '../components/ui/layout/Section.astro';
import Heading from '../components/ui/display/Heading.astro';
import Text from '../components/ui/display/Text.astro';

// Import project data
import roofingProjects from '../content/services/roofing.json';
import constructionProjects from '../content/services/construction.json';
import showcaseProjects from '../content/services/showcase.json';

const metadata = {
  title: 'Our Projects - JLand Contracting | GAF Master Elite Certified Roofing',
  description: 'Explore our portfolio of completed roofing, siding, and construction projects featuring GAF Master Elite certified installations, system warranties, and proven long-term performance.',
};
---

<Layout title="Our Projects - JLand Contracting">
  <Header />
  
    <!-- Hero Section -->
    <Section background="dark">
      <Container>
        <div class="text-center max-w-4xl mx-auto">
          <div class="mb-6">
            <div class="inline-flex items-center justify-center mb-4 text-white bg-brand-primary px-4 py-2 rounded-full font-semibold">20+ Years of Excellence</div>
          </div>
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight">
            Our Project Portfolio,<br>
            <span class="text-accent-primary">Built to Last</span>
          </h1>
          <p class="text-xl text-white mb-8 leading-relaxed">
            Explore our portfolio of completed roofing, siding, and commercial projects throughout Frederick, MD and surrounding areas. Each project demonstrates our systematic approach to system integrity, backed by GAF Master Elite certification and measurable performance standards.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <Button href="#contact" variant="primary" size="lg">
              Start Your Project
            </Button>
            <Button href="tel:+14102920801" variant="primary" size="lg" class="bg-white text-brand-primary border-white hover:bg-gray-100">
              Call (240) 456-7890
            </Button>
          </div>
          <div class="flex flex-wrap justify-center gap-6 text-sm text-white">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span>Licensed & Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span>100+ Projects Completed</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span>Lifetime Warranty</span>
            </div>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Asphalt Shingles Showcase -->
    <Section class="py-20">
      <Container>
        <div class="text-center mb-20">
          <div class="inline-flex items-center bg-brand-primary/10 text-brand-primary px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
            </svg>
            Residential Roofing
          </div>
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
            Asphalt Shingles Showcase
          </h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
            Discover our premium asphalt shingle installations engineered for optimal ventilation, water shedding, and long-term performance,
            backed by GAF Master Elite certification and our 50-year system warranty.
          </p>
        </div>
        
        <div class="space-y-12">
          {roofingProjects.services.map((project: any, index: number) => (
            <ProjectShowcaseCard 
              project={{
                title: project.title,
                location: project.location,
                description: project.description,
                materials: project.materials,
                image: project.image || '/images/projects/roofing-placeholder.jpg',
                testimonial: project.testimonial ? {
                  quote: project.testimonial.quote,
                  author: project.testimonial.author,
                  role: project.testimonial.role
                } : undefined,
                details: {
                  duration: project.duration,
                  size: project.size,
                  challenge: project.challenge
                },
                cta: {
                  text: 'View Project Details',
                  href: '#contact'
                }
              }}
              variant={index === 0 ? 'featured' : 'default'}
              imagePosition={index % 2 === 0 ? 'left' : 'right'}
            />
          ))}
        </div>
      </Container>
    </Section>

    <!-- Siding Projects Display -->
    <Section class="bg-background-light py-20">
      <Container>
        <div class="text-center mb-20">
          <div class="inline-flex items-center bg-brand-secondary/10 text-brand-secondary px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
            Exterior Siding
          </div>
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
            Siding Projects Display
          </h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
            Explore our comprehensive siding solutions engineered for superior moisture management, ventilation, and structural protection,
            backed by premium material warranties and our craftsmanship guarantee.
          </p>
        </div>
        
        <div class="space-y-12">
          {constructionProjects.services.map((project: any, index: number) => (
            <ProjectShowcaseCard 
              project={{
                title: project.title,
                location: project.location,
                description: project.description,
                materials: project.materials,
                image: project.image || '/images/projects/siding-placeholder.jpg',
                testimonial: project.testimonial ? {
                  quote: project.testimonial.quote,
                  author: project.testimonial.author,
                  role: project.testimonial.role
                } : undefined,
                details: {
                  duration: project.duration,
                  size: project.size,
                  challenge: project.challenge
                },
                cta: {
                  text: 'Learn More',
                  href: '#contact'
                }
              }}
              variant='default'
              imagePosition={index % 2 === 0 ? 'right' : 'left'}
            />
          ))}
        </div>
      </Container>
    </Section>

    <!-- Commercial Projects Section -->
    <Section class="py-20">
      <Container>
        <div class="text-center mb-20">
          <div class="inline-flex items-center bg-gray-900/10 text-gray-900 px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm2 3a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
            </svg>
            Commercial Construction
          </div>
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
            Commercial Projects Section
          </h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
            Discover our large-scale commercial roofing and construction projects that demonstrate our systematic approach to complex installations,
            ensuring optimal system performance, structural integrity, and long-term value for commercial properties.
          </p>
        </div>
        
        <div class="space-y-12">
          {showcaseProjects.services.map((project: any, index: number) => (
            <ProjectShowcaseCard 
              project={{
                title: project.title,
                location: project.location,
                description: project.description,
                materials: project.materials,
                image: project.image || '/images/projects/commercial-placeholder.jpg',
                testimonial: project.testimonial ? {
                  quote: project.testimonial.quote,
                  author: project.testimonial.author,
                  role: project.testimonial.role
                } : undefined,
                details: {
                  duration: project.duration,
                  size: project.size,
                  challenge: project.challenge
                },
                cta: {
                  text: 'View Case Study',
                  href: '#contact'
                }
              }}
              variant={index === 0 ? 'featured' : 'default'}
              imagePosition={index % 2 === 0 ? 'left' : 'right'}
            />
          ))}
        </div>
      </Container>
    </Section>

    <!-- CTA Section -->
    <Section background="dark">
      <Container>
        <div class="text-center max-w-4xl mx-auto">
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 text-white">
            Ready to Start Your <span class="text-accent-primary">Project?</span>
          </h2>
          <p class="text-xl mb-8 text-white leading-relaxed">
            Get a free consultation and detailed assessment for your roofing, siding, or construction project.
            We'll evaluate your current system integrity and provide recommendations backed by our GAF Master Elite expertise.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/contact" variant="primary" size="lg">
              Get Free Quote
            </Button>
            <Button href="tel:+14102920801" variant="primary" size="lg" class="bg-white text-brand-primary border-white hover:bg-gray-100">
              Call (240) 456-7890
            </Button>
          </div>
        </div>
      </Container>
    </Section>
  </main>
  
  
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Our Projects | J Land Contracting | GAF Master Elite Certified",
  "description": "Explore our portfolio of GAF Master Elite certified roofing, siding, and commercial construction projects featuring system warranties and proven long-term performance in Jefferson, MD and surrounding areas.",
  "url": "https://jlandcontracting.com/projects",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "J Land Contracting INC",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Jefferson, MD",
      "postalCode": "21755",
      "addressCountry": "US"
    },
    "telephone": "(240) 456-7890",
    "serviceArea": "Jefferson, MD and surrounding areas",
    "certification": "GAF Master Elite",
    "warranty": "50-year system warranty"
  }
}
</script>