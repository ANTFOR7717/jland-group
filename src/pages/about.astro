---
import { getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header.astro";
import SectionHeader from "../components/ui/display/SectionHeader.astro";
import Button from "../components/ui/buttons/Button.astro";
import Container from "../components/ui/layout/Container.astro";
import Section from "../components/ui/layout/Section.astro";
import Badge from "../components/ui/display/Badge.astro";

const page = (await getEntry("pages", "about"))!;
const {
  title,
  description,
  badge,
  hero_heading,
  hero_heading_accent,
  hero_subtitle,
  cta_primary_text,
  cta_secondary_text,
  cta_secondary_href,
  trust_indicators,
  story_heading,
  story_subtitle,
  story_paragraphs,
  story_button_text,
  story_button_href,
  founder_name,
  founder_role,
  founder_quote,
  founder_stats,
  values_heading,
  values_subtitle,
  values_list,
  mission_heading,
  mission_description,
  mission_primary_text,
  mission_secondary_text,
  mission_secondary_href,
  team_heading,
  team_subtitle,
  team_members,
  expertise_heading,
  expertise_subtitle,
  expertise_stats,
  community_heading,
  community_subtitle,
  community_partners,
  community_stats_heading,
  community_stats,
  community_link_text,
  community_link_href,
  final_cta_heading,
  final_cta_subtitle,
  final_cta_benefits,
  final_cta_primary_text,
  final_cta_secondary_text,
  final_cta_secondary_href,
  final_cta_footer_items,
} = page.data as any;

// Icon mapping
const iconMap: Record<string, string> = {
  scale: `<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>`,
  "check-circle": `<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`,
  home: `<path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>`,
  users: `<path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>`,
  video: `<path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"></path>`, // Used for founder icon
  partner: `<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>`,
};
---

<Layout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <Section background="dark">
      <Container>
        <div class="text-center max-w-4xl mx-auto">
          <div class="mb-6">
            <div
              class="inline-flex items-center justify-center mb-4 text-white bg-brand-primary px-4 py-2 rounded-full font-semibold"
            >
              {badge}
            </div>
          </div>
          <h1
            class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight"
          >
            {hero_heading}<br />
            <span class="text-accent-primary">{hero_heading_accent}</span>
          </h1>
          <p class="text-xl text-white mb-8 leading-relaxed">
            {hero_subtitle}
          </p>
          <div
            class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8"
          >
            <Button
              variant="primary"
              size="lg"
              data-psai-trigger="eea3332f-7784-4ba4-81d9-36b384371b29"
            >
              {cta_primary_text}
            </Button>
            <Button
              href={cta_secondary_href}
              variant="primary"
              size="lg"
              class="bg-white text-brand-primary border-white hover:bg-gray-100"
            >
              {cta_secondary_text}
            </Button>
          </div>
          <div class="flex flex-wrap justify-center gap-6 text-sm text-white">
            {
              trust_indicators?.map((indicator: string) => (
                <div class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5 text-accent-primary"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span>{indicator}</span>
                </div>
              ))
            }
          </div>
        </div>
      </Container>
    </Section>

    <!-- Company Story -->
    <Section class="py-16 bg-background-light">
      <Container>
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <SectionHeader
                title={story_heading}
                alignment="left"
                size="3xl"
              />
              <p class="text-xl text-brand-primary mb-8 leading-relaxed">
                {story_subtitle}
              </p>

              <div
                class="prose prose-lg max-w-none text-brand-primary space-y-6"
              >
                {
                  story_paragraphs?.map((paragraph: string) => (
                    <p class="text-lg leading-relaxed">{paragraph}</p>
                  ))
                }
              </div>

              <div class="mt-8">
                <Button
                  href={story_button_href}
                  variant="primary"
                  size="md"
                  class="text-center text-sm sm:text-base"
                >
                  {story_button_text}
                </Button>
              </div>
            </div>

            <div class="relative">
              <div class="bg-white rounded-2xl shadow-xl p-8">
                <div class="text-center mb-6">
                  <div
                    class="w-20 h-20 bg-accent-primary rounded-full flex items-center justify-center mx-auto mb-4"
                  >
                    <svg
                      class="w-10 h-10 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <Fragment set:html={iconMap["video"]} />
                    </svg>
                  </div>
                  <h3 class="text-2xl font-bold text-brand-primary mb-2">
                    {founder_name}
                  </h3>
                  <p class="text-brand-secondary mb-4">{founder_role}</p>
                </div>

                <blockquote
                  class="text-center italic text-brand-secondary text-lg"
                >
                  "{founder_quote}"
                </blockquote>

                <div class="mt-6 pt-6 border-t border-brand-border">
                  <div class="grid grid-cols-3 gap-4 text-center">
                    {
                      founder_stats?.map((stat: any) => (
                        <div>
                          <div class="text-2xl font-bold text-accent-primary">
                            {stat.value}
                          </div>
                          <div class="text-sm text-brand-secondary">
                            {stat.label}
                          </div>
                        </div>
                      ))
                    }
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Values & Mission -->
    <Section class="py-16">
      <Container>
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <SectionHeader
              title={values_heading}
              alignment="center"
              size="3xl"
            />
            <p
              class="text-xl text-brand-secondary max-w-3xl mx-auto leading-relaxed"
            >
              {values_subtitle}
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
            {
              values_list?.map((value: any) => (
                <div class="text-center">
                  <div class="w-16 h-16 bg-accent-primary rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg
                      class="w-8 h-8 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <Fragment set:html={iconMap[value.icon]} />
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-brand-primary mb-3">
                    {value.title}
                  </h3>
                  <p class="text-brand-secondary leading-relaxed">
                    {value.description}
                  </p>
                </div>
              ))
            }
          </div>

          <div class="bg-brand-primary rounded-2xl p-8 md:p-12 text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
              {mission_heading}
            </h2>
            <p
              class="text-xl text-white/90 max-w-4xl mx-auto leading-relaxed mb-8"
            >
              {mission_description}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <Button
                variant="primary"
                size="lg"
                class="text-center text-sm sm:text-base"
                data-psai-trigger="eea3332f-7784-4ba4-81d9-36b384371b29"
              >
                {mission_primary_text}
              </Button>
              <Button
                href={mission_secondary_href}
                variant="link"
                size="lg"
                class="text-center text-sm sm:text-base"
              >
                {mission_secondary_text}
              </Button>
            </div>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Team Showcase -->
    <Section class="py-16 bg-background-light" id="team">
      <Container>
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <SectionHeader title={team_heading} alignment="center" size="3xl" />
            <p
              class="text-xl text-brand-primary max-w-3xl mx-auto leading-relaxed"
            >
              {team_subtitle}
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
              team_members?.map((member: any) => (
                <div class="bg-white rounded-2xl shadow-lg p-6 text-center">
                  <div class="w-24 h-24 bg-accent-primary rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl font-bold text-white">
                      {member.initials}
                    </span>
                  </div>
                  <h3 class="text-xl font-bold text-brand-primary mb-2">
                    {member.name}
                  </h3>
                  <p class="text-brand-primary mb-4">{member.role}</p>
                  <p class="text-sm text-brand-primary leading-relaxed mb-4">
                    {member.bio}
                  </p>
                  <div class="flex justify-center space-x-2">
                    <Badge variant={member.badge_variant}>{member.badge}</Badge>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </Container>
    </Section>

    <!-- Expertise Highlights -->
    <Section class="py-16">
      <Container>
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <SectionHeader
              title={expertise_heading}
              alignment="center"
              size="3xl"
            />
            <p
              class="text-xl text-brand-secondary max-w-3xl mx-auto leading-relaxed"
            >
              {expertise_subtitle}
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
            {
              expertise_stats?.map((stat: any) => (
                <div class="text-center">
                  <div class="text-4xl font-bold text-accent-primary mb-2">
                    {stat.value}
                  </div>
                  <div class="text-brand-secondary">{stat.label}</div>
                </div>
              ))
            }
          </div>
        </div>
      </Container>
    </Section>

    <!-- Community Involvement -->
    <Section class="py-16">
      <Container>
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <SectionHeader
              title={community_heading}
              alignment="center"
              size="3xl"
            />
            <p
              class="text-xl text-brand-secondary max-w-3xl mx-auto leading-relaxed"
            >
              {community_subtitle}
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
            <div>
              <h3 class="text-2xl font-bold text-brand-primary mb-6">
                Local Partnerships
              </h3>
              <div class="space-y-4">
                {
                  community_partners?.map((partner: any) => (
                    <div class="flex items-start">
                      <div class="w-6 h-6 bg-accent-primary rounded-full flex items-center justify-center mr-4 mt-1">
                        <svg
                          class="w-3 h-3 text-white"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <Fragment set:html={iconMap["partner"]} />
                        </svg>
                      </div>
                      <div>
                        <h4 class="font-semibold text-brand-primary">
                          {partner.title}
                        </h4>
                        <p class="text-brand-secondary text-sm">
                          {partner.description}
                        </p>
                      </div>
                    </div>
                  ))
                }
              </div>
            </div>

            <div class="bg-background-light rounded-2xl p-8">
              <h3
                class="text-2xl font-bold text-brand-primary mb-6 text-center"
              >
                {community_stats_heading}
              </h3>
              <div class="grid grid-cols-2 gap-6">
                {
                  community_stats?.map((stat: any) => (
                    <div class="text-center">
                      <div class="text-3xl font-bold text-accent-primary mb-2">
                        {stat.value}
                      </div>
                      <div class="text-brand-primary text-sm">{stat.label}</div>
                    </div>
                  ))
                }
              </div>
              <div class="text-center mt-6">
                <Button
                  href={community_link_href}
                  variant="link"
                  class="text-center text-sm sm:text-base"
                >
                  {community_link_text}
                </Button>
              </div>
            </div>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Final Conversion CTA -->
    <Section background="dark">
      <Container>
        <div class="text-center max-w-4xl mx-auto">
          <h2
            class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 text-white"
          >
            {final_cta_heading?.split("Family's Future")[0]}
            <span class="text-accent-primary"
              >{
                final_cta_heading?.includes("Family's Future")
                  ? "Family's Future?"
                  : ""
              }</span
            >
          </h2>
          <p class="text-xl mb-8 text-white leading-relaxed">
            {final_cta_subtitle}
          </p>

          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 mb-8">
            <div class="grid md:grid-cols-3 gap-6 text-center">
              {
                final_cta_benefits?.map((benefit: any) => (
                  <div>
                    <div class="text-3xl font-bold text-accent-primary mb-2">
                      {benefit.value}
                    </div>
                    <div class="text-sm text-white">{benefit.label}</div>
                  </div>
                ))
              }
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
            <Button
              variant="primary"
              size="lg"
              data-psai-trigger="eea3332f-7784-4ba4-81d9-36b384371b29"
            >
              {final_cta_primary_text}
            </Button>
            <Button
              href={final_cta_secondary_href}
              variant="primary"
              size="lg"
              class="bg-white text-brand-primary border-white hover:bg-gray-100"
            >
              {final_cta_secondary_text}
            </Button>
          </div>

          <div
            class="flex items-center justify-center space-x-6 text-sm text-white"
          >
            {
              final_cta_footer_items?.map((item: string) => (
                <div class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {item}
                </div>
              ))
            }
          </div>
        </div>
      </Container>
    </Section>
  </main>
</Layout>

